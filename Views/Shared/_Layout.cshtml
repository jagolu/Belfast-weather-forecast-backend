<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <base href="/">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <!--<a class="navbar-brand">@Html.ActionLink("Weather Forecast", "WeatherForecast", "Home")</a>-->
        @Html.ActionLink("WeatherForecast", "WeatherForecast", "Home", "", new {@class = "navbar-brand "});

        <div class="form-inline">
            <!-- <button class="btn btn-outline-danger my-2 my-sm-0">Logout </button> -->

            @{
                if (ViewBag.showLogIn != null && ViewBag.showLogIn)
                {
                    <button class="btn btn-outline-success mr-2">@Html.ActionLink("Login", "LogIn", "Home")</button>
                }
                if (ViewBag.showSignUp != null && ViewBag.showSignUp)
                {
                    <button class="btn btn-outline-info mr-2">@Html.ActionLink("Register", "SignUp", "Home")</button>
                } 
                if (ViewBag.auth != null && ViewBag.auth)
                {
                    <button class="btn btn-outline-danger mr-2">@Html.ActionLink("Log Out", "Logout", "Home")</button>
                }
                
            }


        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

</body>
</html>
